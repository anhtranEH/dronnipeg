  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <%@categories.each do |category|%>
        <tr>
          <td><%=link_to category.name, category_path(category.id)%></td>
          <td><%=category.description%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%=paginate @categories, window: 2%>
