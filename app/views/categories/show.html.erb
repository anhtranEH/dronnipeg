<h1><%=@category.name%></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <%@category.products.each do |product|%>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%=product.price %></td>
      </tr>
    <%end%>
  </tbody>
</table>
